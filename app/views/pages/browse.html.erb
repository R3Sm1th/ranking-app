<div data-controller="movies">
  <div class="col-12 col-6-lg">
    <div class="container text-center">
      <form class="row g-2 justify-content-center py-5" data-action="submit->movies#search">
        <div style="width:80%">
          <input type="text" class="form-control" placeholder="Find a movie (by title)" data-movies-target="input">
        </div>
        <div style="width:20%">
          <input type="submit" class="btn btn-primary">
        </div>
      </form>
      <div class="cards" id="results" data-movies-target="results">
        <%# movie data is inserted into here... %>
      </div>
    </div>
  </div>

  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Movie Details</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body" data-movies-target="display">
          <img src="" alt="">
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
</div>
